<div class="modal fade" id="confirmationModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">@Title</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @Body
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" @onclick="() => ConfirmationClicked(false)">Close</button>
                <button type="button" class="btn @ConfirmButtonStyle" @onclick="() => ConfirmationClicked(true)">@ConfirmButtonText</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public EventCallback<bool> OnModalConfirmation { get; set; }

    [Parameter] 
    public string Title { get; set; } = "Confirm Operation";

    [Parameter] 
    public string Body { get; set; } = "Confirm operation?";

    [Parameter] 
    public string ConfirmButtonStyle { get; set; } = "btn-primary";

    [Parameter] 
    public string ConfirmButtonText { get; set; } = "Confirm"; 

    private async Task ConfirmationClicked(bool value)
    {
        if (!value)
        {
            return;
        }

        await OnModalConfirmation.InvokeAsync(true);
    }
}
